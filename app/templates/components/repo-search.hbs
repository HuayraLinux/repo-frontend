<div class="ui search">
  {{yield}}
  <div class="ui icon input">
    {{input class="prompt" placeholder="Nombre del paquete" type="search" value=search}}
    <i class="search icon"></i>
  </div>
  <div class="results">
    {{#each results as |result|}}
      {{#link-to "packages.showPackage" result}}
        <div class="result">
          <span class="title">{{result}}</span>
        </div>
      {{/link-to}}
    {{else}}
      <i>No se encontraron resultados</i>
    {{/each}}
    <div class="controls">
      <button class="ui button" disabled={{disablePrevious}} {{action previous}}>Anterior</button>
      <button class="ui button" disabled={{disableNext}} {{action next}}>Siguiente</button>
    </div>
  </div>
</div>
